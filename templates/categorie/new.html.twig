{% extends 'base.html.twig' %}

{% block title %}Créer une nouvelle catégorie{% endblock %}

{% block body %}
<div class="container mt-4" style="max-width: 600px;">
    <h1 class="mb-4">Créer une nouvelle catégorie</h1>

    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_label(form.nom, 'Nom de la catégorie', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nom) }}
        </div>

        <button type="submit" class="btn btn-primary">Enregistrer</button>
        <a href="{{ path('app_categorie_index') }}" class="btn btn-secondary ms-2">Retour à la liste</a>
    {{ form_end(form) }}
</div>
{% endblock %}