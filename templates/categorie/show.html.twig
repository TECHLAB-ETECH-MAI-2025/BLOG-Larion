{% extends 'base.html.twig' %}

{% block title %}Détail de la Catégorie{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Détails de la catégorie</h1>

        <table class="table table-bordered shadow-sm">
            <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ categorie.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ categorie.nom }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex gap-2">
            <a href="{{ path('app_categorie_index') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>

            <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Modifier
            </a>

            {{ include('categorie/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
