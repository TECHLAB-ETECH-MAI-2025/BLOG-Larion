{% extends 'base.html.twig' %}

{% block title %}Détails du Commentaire{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Détails du Commentaire</h1>

        <table class="table table-bordered shadow-sm">
            <tbody>
                <tr>
                    <th scope="row">ID</th>
                    <td>{{ commentaire.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Contenu</th>
                    <td>{{ commentaire.contenu }}</td>
                </tr>
                <tr>
                    <th scope="row">Auteur</th>
                    <td>{{ commentaire.auteur }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex gap-2">
            <a href="{{ path('app_commentaire_index') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Retour à la liste
            </a>

            <a href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}" class="btn btn-primary">
                <i class="bi bi-pencil-square"></i> Modifier
            </a>

            {{ include('commentaire/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
