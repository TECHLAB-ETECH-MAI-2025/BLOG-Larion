{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4 text-center text-primary fw-bold">Détails de l'utilisateur</h1>

    <table class="table table-striped table-bordered shadow-sm">
        <tbody>
            <tr>
                <th scope="row">ID</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th scope="row">Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th scope="row">Rôles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th scope="row">Mot de passe</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between mt-4">
        <a href="{{ path('app_user_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle me-2"></i> Retour à la liste
        </a>

        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary">
            <i class="bi bi-pencil-square me-2"></i> Modifier
        </a>

        {{ include('user/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
